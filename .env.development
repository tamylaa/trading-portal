# API Endpoints
REACT_APP_API_URL=http://localhost:3000
REACT_APP_AUTH_SERVICE_URL=https://auth.tamyla.com
REACT_APP_AUTH_API_URL=http://127.0.0.1:8787
REACT_APP_EMAIL_SERVICE_URL=https://auto_email.tamyla.com

# MeiliSearch Configuration
REACT_APP_MEILISEARCH_GATEWAY_URL=http://localhost:8787
REACT_APP_MEILISEARCH_INDEX_NAME=documents-dev
REACT_APP_SEARCH_DEFAULT_LIMIT=20
REACT_APP_SEARCH_MAX_RESULTS=100
REACT_APP_SEARCH_DEBOUNCE_MS=300

# Feature Flags
REACT_APP_EMAIL_SERVICE_ENABLED=true
REACT_APP_FEATURE_EMAIL_NOTIFICATIONS=true
REACT_APP_FEATURE_ADVANCED_SEARCH=true
REACT_APP_FEATURE_FACETED_SEARCH=true
REACT_APP_FEATURE_SEARCH_ANALYTICS=false
REACT_APP_FEATURE_AUTO_COMPLETE=true
REACT_APP_FEATURE_SEARCH_SUGGESTIONS=true
REACT_APP_FEATURE_BULK_OPERATIONS=false

# Performance and Caching
REACT_APP_CACHE_TTL_MS=300000
REACT_APP_ENABLE_REQUEST_CACHING=true
REACT_APP_ENABLE_RESULT_CACHING=true
REACT_APP_MAX_CONCURRENT_REQUESTS=5
REACT_APP_RETRY_ATTEMPTS=3
REACT_APP_RETRY_DELAY_MS=1000

# Security Settings
REACT_APP_JWT_AUDIENCE=tamyla-trading-portal
REACT_APP_JWT_ISSUER=https://auth.tamyla.com
REACT_APP_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
REACT_APP_RATE_LIMIT_SEARCH=120

# Monitoring and Logging
REACT_APP_ENABLE_ERROR_REPORTING=false
REACT_APP_ENABLE_PERFORMANCE_MONITORING=false
REACT_APP_LOG_LEVEL=debug

# Fallback Settings
REACT_APP_MOCK_DELAY_MS=500
REACT_APP_MOCK_RESULTS_COUNT=8
REACT_APP_FALLBACK_MESSAGE=Development mode: Using sample data while MeiliSearch is starting
REACT_APP_ENABLE_OFFLINE_MODE=true

# App Settings
REACT_APP_BREVO_WEBSITE_ID=6704cb001ad80008190eeb95
REACT_APP_ENVIRONMENT=development

# Enable detailed logging in development
REACT_APP_DEBUG=true