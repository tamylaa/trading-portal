# API Endpoints
REACT_APP_API_URL=https://staging-api.tamyla.com
REACT_APP_AUTH_SERVICE_URL=https://staging-auth.tamyla.com
REACT_APP_EMAIL_SERVICE_URL=https://staging-email.tamyla.com

# MeiliSearch Configuration
REACT_APP_MEILISEARCH_GATEWAY_URL=https://meilisearch-gateway-staging.workers.dev
REACT_APP_MEILISEARCH_INDEX_NAME=documents-staging
REACT_APP_SEARCH_DEFAULT_LIMIT=20
REACT_APP_SEARCH_MAX_RESULTS=75
REACT_APP_SEARCH_DEBOUNCE_MS=300

# Feature Flags
REACT_APP_EMAIL_SERVICE_ENABLED=true
REACT_APP_FEATURE_EMAIL_NOTIFICATIONS=true
REACT_APP_FEATURE_ADVANCED_SEARCH=true
REACT_APP_FEATURE_FACETED_SEARCH=true
REACT_APP_FEATURE_SEARCH_ANALYTICS=true
REACT_APP_FEATURE_AUTO_COMPLETE=true
REACT_APP_FEATURE_SEARCH_SUGGESTIONS=true
REACT_APP_FEATURE_BULK_OPERATIONS=false

# Performance and Caching
REACT_APP_CACHE_TTL_MS=300000
REACT_APP_ENABLE_REQUEST_CACHING=true
REACT_APP_ENABLE_RESULT_CACHING=true
REACT_APP_MAX_CONCURRENT_REQUESTS=4
REACT_APP_RETRY_ATTEMPTS=3
REACT_APP_RETRY_DELAY_MS=1000

# Security Settings
REACT_APP_JWT_AUDIENCE=tamyla-trading-portal-staging
REACT_APP_JWT_ISSUER=https://staging-auth.tamyla.com
REACT_APP_CORS_ORIGINS=https://staging.tamyla.com,http://localhost:3000
REACT_APP_RATE_LIMIT_SEARCH=100

# Monitoring and Logging
REACT_APP_ENABLE_ERROR_REPORTING=true
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
REACT_APP_LOG_LEVEL=info
REACT_APP_ERROR_REPORTING_URL=https://staging-errors.tamyla.com/api/reports
REACT_APP_ANALYTICS_ENDPOINT=https://staging-analytics.tamyla.com/api/events

# Fallback Settings
REACT_APP_MOCK_DELAY_MS=300
REACT_APP_MOCK_RESULTS_COUNT=5
REACT_APP_FALLBACK_MESSAGE=Staging environment: Search service temporarily unavailable
REACT_APP_ENABLE_OFFLINE_MODE=true

# App Settings
REACT_APP_BREVO_WEBSITE_ID=6704cb001ad80008190eeb95
REACT_APP_ENVIRONMENT=staging
REACT_APP_PUBLIC_URL=https://staging.tamyla.com/trading-portal

# Enable detailed logging in staging
REACT_APP_DEBUG=true